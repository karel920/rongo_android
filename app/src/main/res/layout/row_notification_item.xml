<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_live_thumb" />

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="35dp"
        android:layout_toRightOf="@id/iv_notification"
        android:fontFamily="@font/notosansjp_regular"
        android:includeFontPadding="false"
        android:textColor="@color/mainTextColor"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_notification_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notification"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iv_notification"
        android:fontFamily="@font/notosansjp_regular"
        android:includeFontPadding="false"
        android:text="2020-03-03 09:12"
        android:textColor="@color/goldColor"
        android:textSize="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/iv_notification"
        android:background="@color/gray" />

</RelativeLayout>
