<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
           <item>
               <shape android:shape="rectangle">
                   <stroke android:color="#BBA884" android:width="2dp"/>
                   <corners android:radius="100dp"/>
               </shape>
           </item>
            <item android:drawable="@drawable/ic_product_unfavorite" android:height="15dp" android:width="15dp" android:gravity="center_vertical" android:left="10dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#BBA884" android:width="2dp"/>
                    <corners android:radius="100dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_product_favorite" android:height="15dp" android:width="15dp" android:gravity="center_vertical" android:left="10dp"/>
        </layer-list>
    </item>
</selector>