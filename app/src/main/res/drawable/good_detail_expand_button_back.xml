<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item android:drawable="@drawable/ic_up_arrow" android:height="15dp" android:width="15dp" android:gravity="center_vertical" android:left="10dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>

            <item android:drawable="@drawable/ic_down_arrow" android:height="15dp" android:width="15dp" android:gravity="center_vertical" android:left="10dp"/>
        </layer-list>
    </item>
</selector>